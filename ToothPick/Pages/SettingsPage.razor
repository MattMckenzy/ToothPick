@page "/settings"

@inject ToothPickContext ToothPickContext
@inject NavigationManager NavigationManager

<PageTitle>ToothPick - Settings</PageTitle>

<h2>Settings</h2>  

<CascadingValue Name="@nameof(ItemKey)" Value="@ItemKey">
    <SettingsList />
</CascadingValue>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = nameof(ItemKey))]
    public string? ItemKey { get; set; } 
}